
@{
	ViewBag.Title = "EditProfileInfo";
}

<div class="container" id="app">

    <a style="display:block" class="breadcrumb-item" href="/Profile/UserProfile">Назад</a>

    <img class="avatar-picture" v-bind:src="img" />
    <br />
    <br />
    <div class="custom-file">
        <input type="file" class="custom-file-input" id="Files" v-on:change="imageSelectionHandler" accept=".jpg, .jpeg, .gif, .png" >
        <label class="custom-file-label" for="customFile">Изменить аватар</label>
    </div>
    @*<input type="file" class="form-control-file" id="Files" v-on:change="imageSelectionHandler" accept=".jpg, .jpeg, .gif, .png" />*@
    <form>

        <div class="form-group">
            <label for="formGroupExampleInput2">Email</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Email" v-model="user.Email">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Дата рождения</label>
            <input type="date" class="form-control" id="formGroupExampleInput2" placeholder="Возраст" v-model="user.DateOfBirth">
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">ФИО</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="ФИО" v-model="user.FullName">
        </div>
    </form>

    <button class="btn btn-outline-primary" v-on:click="changeUserInfo">Сохранить</button>

</div>


<script src="~/Scripts/Profile/EditProfileInfoVue.js"></script>