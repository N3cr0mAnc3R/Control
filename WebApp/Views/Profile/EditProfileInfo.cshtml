
@{
	ViewBag.Title = "EditProfileInfo";
}

<div class="container" id="app">
	<img class="avatar-picture" v-bind:src="img" />
	<input type="file" id="Files" v-on:change="imageSelectionHandler" accept=".jpg, .jpeg, .gif, .png" />
	<form>
		
		<div class="form-group">
			<label for="formGroupExampleInput2">Email</label>
			<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Email" v-model="user.Email">
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Дата рождения</label>
			<input type="date" class="form-control" id="formGroupExampleInput2" placeholder="Возраст"  v-model="user.DateOfBirth| date:'dd.MM.yyyy'" >
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">ФИО</label>
			<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="ФИО"  v-model="user.FullName">
		</div>
	</form>
	@*<button v-on:click="saveProfileChanges">Сохранить</button>*@
	<button v-on:click="changeUserInfo">Сохранить</button>
	<button  v-on:click="GetUserImage"></button>
</div>


<script src="~/Scripts/Profile/EditProfileInfoVue.js"></script>