
@{
	ViewBag.Title = "EditProfileInfo";
}

<div class="container" id="app">
	<img class="avatar-picture" src="~/Content/Images/noImage.png" />
	<input type="file" id="Files" v-on:change="InputFileValidate" accept=".jpg, .jpeg, .gif, .png" />
	<form>
		<div class="form-group">
			<label for="formGroupExampleInput">Имя</label>
			<input type="text" class="form-control" id="formGroupExampleInput" placeholder="Имя">
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Email</label>
			<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Email">
		</div>
		<div class="form-group">
			<label for="formGroupExampleInput2">Возраст</label>
			<input type="text" class="form-control" id="formGroupExampleInput2" placeholder="Возраст">
		</div>
	</form>
	<button v-on:click="saveProfileChanges">Сохранить</button>
</div>


<script src="~/Scripts/Profile/EditProfileInfoVue.js"></script>